<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="at.wifi.notenmanager.controller.DashboardController"
            prefWidth="1000.0" prefHeight="700.0"
            stylesheets="@notenmanagerTheme.css">

    <top>
        <ToolBar fx:id="toolbar" styleClass="toolbar">
            <Button text="Schüler" onAction="#openStudentsView" styleClass="nav-button"/>
            <Button text="Fächer" onAction="#openSubjectView" styleClass="nav-button"/>
            <Button text="Noten" onAction="#openGradesView" styleClass="nav-button"/>
            <Button text="Verhalten" onAction="#openBehaviorView" styleClass="nav-button"/>
            <Button text="Notizen" onAction="#openNotesView" styleClass="nav-button"/>
            <Button text="Statistik" onAction="#openStatisticsView" styleClass="nav-button"/>
            <Region fx:id="spacer" HBox.hgrow="ALWAYS"/>
            <Button text="Logout" onAction="#handleLogout" styleClass="logout-button"/>
        </ToolBar>
    </top>

    <center>
        <TabPane fx:id="tabPane"
                 tabClosingPolicy="SELECTED_TAB"
                 styleClass="tab-pane"
                 prefHeight="600.0"/>
    </center>

</BorderPane>
