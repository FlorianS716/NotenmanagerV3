<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="at.wifi.notenmanager.controller.RegisterController"
            prefHeight="400.0" prefWidth="600.0"
            stylesheets="@notenmanagerTheme.css">

    <VBox styleClass="card">
        <Label text="Registrierung" styleClass="heading"/>

        <Label text="E-Mail" styleClass="form-label"/>
        <TextField fx:id="emailField" promptText="E-Mail" styleClass="text-field"/>

        <Label text="Passwort" styleClass="form-label"/>
        <PasswordField fx:id="passwordField" promptText="Mind. 7 Zeichen lang" styleClass="password-field"/>

        <Label fx:id="statusLabel" styleClass="status-label"/>

        <Button text="Registrieren" onAction="#handleRegister" styleClass="primary-button"/>
    </VBox>

</AnchorPane>
